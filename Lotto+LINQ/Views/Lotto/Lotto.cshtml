@using Lotto_LINQ.Models;
@model List<LotteryDraw>

@{
    ViewBag.Title = "Lotto";
}

<center><h2>Lotto</h2></center>
<br />


    <table class="table table-striped table-bordered">

        <tr>
            <th scope="col">Numer losowania</th>
            <th scope="col">
                @Html.ActionLink("Data", "Lotto", new { sortOrder = ViewBag.DateSortParm })
            </th>
            <th colspan="6" scope="col"><center>Wyniki losowania</center></th>

        </tr>


        @using (Html.BeginForm("Lotto", "Lotto"))
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Index</td>
                    <td>@item.Date.ToShortDateString()</td>
                    @for (int i = 0; i < item.DrawnNumbers.Count; i++)
                    {
                        <td>@item.DrawnNumbers.ElementAt(i).ToString()</td>

                    }
                </tr>
            }
        }
    </table>

